<h1>NEW OFFERS</h1>

<%= simple_form_for(@offer) do |f| %>
  <%= f.input :title %>
  <%= f.input :description, as: :text %>
  <%= f.input :picture_url %>
  <%= f.input :location %>
  <%= f.input :price %>
  <%= f.input :start_time, as: :date %>
  <%= f.input :end_time, as: :date %>
  <%= f.button :submit %>
<% end %>