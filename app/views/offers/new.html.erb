<% if policy(User).create? %>
  <%= link_to "New User", new_user_path %>
<% end %>

<h1>NEW OFFERS</h1>

<%= simple_form_for(@offer) do |f| %>
  <%= f.input :title %>
  <%= f.input :description, as: :text %>
  <%= f.input :photo, as: :file %>
  <%= f.input :location %>
  <%= f.input :price %>
  <%= f.button :submit %>
<% end %>
