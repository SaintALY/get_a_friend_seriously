              <%= cl_image_tag(element.photo.key) if element.photo.key %>

              <div class="card_title">
                <li class="title"><%= link_to element.title, "/offers/#{element.id}" %></li>
                <%= image_tag "https://kitt.lewagon.com/placeholder/users/cveneziani", class: "avatar-square", alt: "avatar" %>
              </div>
              <div class="description"><%= element.description %></div>
              <hr>
              <div class="card_info">
              <!--location here  -->
                <li><i class="far fa-compass"></i><%= element.location %></li>
                <li class="price"><%= element.price %> €</li>
              </div>
